<section class="content">
  <div class="box box-primary">
    <div class="box-header">
      <h3 class="box-title">部门列表</h3>
    </div>
    <div class="box-body table-responsive no-padding">                                                     
      <table class="table table-hover"> 
        <tbody>                                                                                            
          <tr>                                                                                             
            <th>名称</th> 
            <th></th>
            <th>操作</th>                                                               
          </tr>                                                                                            
          <%@departments.each do |department|%>
          <tr>
            <td> <%=department.name%><td>
            <td><%=link_to '编辑', edit_admin_department_path(department)%> <%=link_to '删除', admin_department_path(department)%></td>
          </tr>
          <%end%>
        </tbody>                                                                                           
      </table>                                                                                             
    </div>                                                                                                 
    <div class="box-footer clearfix">                                                                      
      <div class="row">
        <div class="col-sm-4 hidden-xs">
          <%= link_to '新建',[:new,:admin,:department],  class: 'btn btn-s-md btn-info btn-flat' %>
        </div>
        <div class="col-sm-4 text-center text-center-xs">
         <%= will_paginate @departments %>
        </div>                                                                                             
      </div>                                                                                               
    </div>    
  </div>    
</section>
